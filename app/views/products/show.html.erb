<body class="product-page">
<main>

    <div class="wrapper">
      <p>Bienvenue sur la page d'ajout d'une image pour le Product portant l'id : <%=@product.id%></p>
      <h3>image actuelle</h3>
      <%if @product.image.attached?%>
      <%= image_tag @product.image, alt: 'image' %>
      <%else%>
      <p>=== Il n'y a pas encore d'avatar lié à ce produit ===</p>
      <%end%>

        <div class="section">
            <div class="container">
                <a href="<%= products_path %>"><i class="now-ui-icons arrows-1_minimal-left"></i> Retour vers l'index</a>
                <div class="row">
                    <div class="d-flex align-content-stretch flex-wrap">
                        <div class="col-md-6 d-flex align-content-center flex-wrap">
                            <%= image_tag @product.image, alt: 'image' %>
                        </div>
                        <div class="col-md-5 ml-auto mr-auto">
                            <h2 class="title"><%= @product.title %></h2>
                            <h5 class="category"><%= @product.brand %> </h5>
                            <h2 class="main-price"><%= @product.price %>€</h2>
                            <% if @product.quantity.to_i > 0 %>
                            <div class="card-collapse justify-content-start">
                                <span><%= button_to 'Ajouter au panier', line_items_path(product_id: @product.id), class: 'btn btn-primary' %><i class="now-ui-icons shopping_cart-simple"></i></span>

                            </div>
                            <% else %>
                            <h6>Out of stock</h6>
                            <%end%>
                            <div class="card-collapse">
                                <div class="card card-plain">
                                    <div class="card-header">
                                    Description
                                    </div>
                                    <div class="card-body">
                                        <p><%= @product.description %></p>
                                    </div>
                                    <div class="card-header">
                                    Reference : <%= @product.reference %>
                                    </div>
                                    <div class="card-header">
                                    Categories :
                                    <% @product.categories do |cat|%>
                                    <span class="badge badge-neutral"><% cat.title %></span>
                                    <%end%>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="section related-products" data-background-color="black" >
            <div class="container">
                <h3 class="title text-center">You may also be interested in:</h3>
                <div class="row">
                    <% @the_cats.sample(4).each do |product|%>
                        <div class="col-sm-6 col-md-3">
                            <div class="card card-product">
                                <div class="card-image">
                                    <a href="#">
                                        <%= image_tag @product.image, alt: 'image' %>
                                    </a>
                                </div>
                                <div class="card-body">
                                    <h6 class="category"><%= product.brand %></h6>
                                    <h5 class="card-title">
                                        <div class="card-link "><%= product.title %></div>
                                    </h5>
                                    <div class="card-footer d-flex justify-content-between align-items-center">

                                        <div class="price-container">
                                            <span class="price "><%= product.price %>€</span>
                                        </div>
                                        <div class="row justify-content-center">
                                              <span><%= button_to 'Voir le produit', product_path(product), class: 'btn btn-neutral', method: :get %></span>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    <% end%>
