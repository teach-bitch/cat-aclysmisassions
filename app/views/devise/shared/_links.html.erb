<%- if controller_name != 'sessions' %>
<div class="pull-right">
  <%= link_to "Connexion", new_session_path(resource_name), :class  => "link footer-link" %>
</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="pull-left">
  <%= link_to "S'inscrire", new_registration_path(resource_name), :class  => "link footer-link" %>
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="pull-right">
  <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), :class  => "link footer-link" %>
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), :class  => "link footer-link" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), :class  => "link footer-link" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), :class  => "link footer-link" %><br />
  <% end %>
<% end %>
